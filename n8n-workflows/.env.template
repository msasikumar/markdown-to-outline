# N8N Workflow Configuration Template
# Copy this to a .env file and update with your actual values

# =============================================================================
# OUTLINE CONFIGURATION
# =============================================================================
OUTLINE_URL=https://outline.sashi.online
OUTLINE_API_KEY=your_outline_api_key_here

# =============================================================================
# N8N WEBHOOK URLs
# =============================================================================
N8N_BASE_URL=https://your-n8n-instance.com
FILE_EVENT_WEBHOOK_URL=https://your-n8n-instance.com/webhook/markdown-file-event
DOCUMENT_PROCESSOR_WEBHOOK_URL=https://your-n8n-instance.com/webhook/markdown-processor
MONITORING_WEBHOOK_URL=https://your-n8n-instance.com/webhook/monitoring
BATCH_PROCESSOR_WEBHOOK_URL=https://your-n8n-instance.com/webhook/batch-processor

# =============================================================================
# FILE SYSTEM MONITORING
# =============================================================================
MONITORED_DIRECTORIES=/home/sashi/documents,/home/sashi/documents/projects,/home/sashi/documents/guides,/home/sashi/documents/technical,/home/sashi/documents/personal,/home/sashi/documents/research
INCLUDE_PATTERNS=*.md,*.markdown,*.mdx
EXCLUDE_PATTERNS=.git,node_modules,.cache,.DS_Store,*.tmp,*.swp,*~

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
BATCH_SIZE=10
MAX_FILE_SIZE_MB=50
EVENT_DEBOUNCE_SECONDS=2
QUEUE_MAX_SIZE=1000

# =============================================================================
# RATE LIMITING
# =============================================================================
OUTLINE_REQUESTS_PER_MINUTE=100
OUTLINE_REQUESTS_PER_HOUR=5000
WEBHOOK_REQUESTS_PER_MINUTE=300

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
ERROR_RATE_THRESHOLD=0.1
PROCESSING_TIME_THRESHOLD=30
QUEUE_SIZE_THRESHOLD=100

# =============================================================================
# SECURITY
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
API_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3

# =============================================================================
# BATCH PROCESSING SCHEDULE
# =============================================================================
BATCH_CRON_SCHEDULE=0 */6 * * *  # Every 6 hours
BATCH_ENABLED=true

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
DEBUG_MODE=false